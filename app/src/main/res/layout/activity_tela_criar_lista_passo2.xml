<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mobile.listaacessivel.fafica.listaacessvel.TelaCriarListaPasso2"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <!--Texto inicial da janela-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selecione_estabelecimento"
        android:textColor="#221818"
        android:gravity="center"
        android:textStyle="bold"
        android:focusable="true"
        android:textSize="20dp"
        android:layout_gravity="bottom|center"
        android:contentDescription="@string/selecione_estabelecimento"
        android:layout_weight="1"
    />

    <!--BotÃ£o filtrar por bairro-->
     <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Filtrar por Bairro"
        android:textOn="Filtrar por Cidade"
        android:layout_gravity="center"
        android:id="@+id/btFiltrarPorBairro"
        android:layout_weight="1"
        />

    <!--Lista dos estabelecimentos-->
    <ListView
        android:id="@+id/listViewEstabelecimentos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="40"></ListView>

</LinearLayout>
