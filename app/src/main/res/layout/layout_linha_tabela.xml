<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_carrinho"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10dp"
        android:id="@+id/text1"
        android:layout_weight="3"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="10dp"
            android:text="@string/bt_editar"
            android:contentDescription="@string/bt_editar"
            android:onClick="editarLista"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:textSize="10dp"
            android:layout_centerVertical="true"
            android:text="@string/bt_solicitar_entrega"
            android:contentDescription="@string/bt_solicitar_entrega_completo"
            android:onClick="solicitarEntrega"/>
</LinearLayout>