<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0">
            <!--Ícone do produto-->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_produto"
                android:contentDescription="@string/ic_produto"
                android:layout_weight="0"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0">
                <!--Título da linha, nome do produto-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="titulo extremamente muito grande"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_alignParentLeft="true"
                    android:textColor="#000000"
                    android:id="@+id/textNomeProduto"
                    android:layout_weight="0"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                    <!--Subtítulo da linha, marca produto-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="marca muito grande"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_alignParentLeft="true"
                            android:textColor="#000000"
                            android:layout_weight="0"
                            android:id="@+id/textMarcaProduto"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="valor R$ 123400"
                            android:gravity="left"
                            android:textColor="#000000"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_alignParentRight="true"
                            android:id="@+id/textValorProduto"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Não selecionado"
                            android:gravity="right"
                            android:textColor="#000000"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_alignParentRight="true"
                            android:id="@+id/textSelecaoProduto"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quantidade : 12"
                            android:gravity="right"
                            android:textColor="#000000"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_alignParentRight="true"
                            android:layout_weight="0"
                            android:id="@+id/textQuantidade"
                            android:visibility="invisible"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>